#!/bin/sh

#check go

echo -n "Checking go ..."
if [ -x $(which go) ];then
	echo $(go version|awk '{print $3 " " $4}')
else
	echo "not found."
	exit 1
fi

GOPATH=$(pwd)
echo -e "all: build\n\nbuild:\n\texport GOPATH=${GOPATH}\n\tmkdir -p ${GOPATH}/bin\n\tgo get github.com/tonychee7000/mysql\n\tgo build glvsadm\n\tmv glvsadm ${GOPATH}/bin" > Makefile
