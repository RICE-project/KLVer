#!/bin/sh

#check go

echo -n "Checking go ..."
if [ -x $(which go) ];then
	echo $(go version|awk '{print $3 " " $4}')
else
	echo "not found."
	exit 1
fi

export GOPATH=$(pwd)
echo "
all: build

build:
        export GOPATH=${GOPATH}
        mkdir -p ${GOPATH}/bin
        go get github.com/tonychee7000/mysql
        go build klver
        mv klver ${GOPATH}/bin
        mkdir -p ${GOPATH}/share/log
        
clean:
        rm -rf ${GOPATH}/pkg
        rm -rf ${GOPATH}/bin
" > Makefile
