#!/bin/sh

#check go

echo -n "Checking go ..."
if [ -x $(which go) ];then
	echo $(go version|awk '{print $3 " " $4}')
else
	echo "not found."
	exit 1
fi

export GOPATH=$(pwd)
echo -e "
export GOPATH=${GOPATH}

all: clean build

build:
\tmkdir -p \$(GOPATH)/bin
\tgo get github.com/tonychee7000/mysql
\tgo build klver
\tmv klver \$(GOPATH)/bin
\tmkdir -p \$(GOPATH)/share/log
        
clean:
\trm -rf \$(GOPATH)/pkg
\trm -rf \$(GOPATH)/bin
" > Makefile
