#!/bin/sh
#coding: utf-8


#check go

echo -n "Checking go ..."
if [ -x $(which go) ];then
	echo $(go version|awk '{print $3 " " $4}')
else
	echo "not found."
	exit 1
fi
ARG_PREFIX=$1

if [ 'x' != "${ARG_PREFIX}x" ];then
	PREFIX=$(echo $ARG_PREFIX|sed 's/--prefix=//'|sed 's/\//\\\//g')
else
	PREFIX=$(pwd|sed 's/\//\\\//g')
fi


PREFIXs=$(echo $PREFIX|sed 's/\\//g')

echo -n "Prefix ... "
echo $PREFIXs

sed "s/@PREFIX@/$PREFIX\//" src/lib/consts/dir.go.in > src/lib/consts/dir.go
sed "s/@PREFIX@/$PREFIX/" ricectl.in > ricectl

export GOPATH=$(pwd)
cat <<EOF >Makefile
export GOPATH=${GOPATH}
export USER=klver

all: clean build

build:
	mkdir -p \$(GOPATH)/bin
	go build klver
	mv klver \$(GOPATH)/bin
	mv ricectl \$(GOPATH)/bin
	chmod 755 \$(GOPATH)/bin/ricectl
	mkdir -p \$(GOPATH)/share/log
		
clean:
	- rm -rf \$(GOPATH)/pkg
	- rm -rf \$(GOPATH)/bin

install:
	- useradd \$(USER) -s /bin/sh -d ${PREFIXs}
	install -o \$(USER) -g \$(USER) -m 755 -d ${PREFIXs}
	install -o \$(USER) -g \$(USER) -m 755 -d ${PREFIXs}/bin
	install -o \$(USER) -g \$(USER) -m 755 \$(GOPATH)/bin/klver ${PREFIXs}/bin
	@cp -fvr \$(GOPATH)/share ${PREFIXs}
	chown -R \$(USER).\$(USER) ${PREFIXs}/share
	chmod -R 755 ${PREFIXs}/share

uninstall:
	rm -rf ${PREFIXs}/bin
	rm -rf ${PREFIXs}/share

EOF
